<div class="container mainContainer">
    <a href="/feedback" id="FeedbackLink">Post a feedback</a>
    <hr>
    <% if (animalName.length > 0) { %>
        <% for (i=0; i < animalName.length; i++) { %>
            <div class="row">
                <div class="col-md-6 infoContainer">
                    <h2>
                        <%=animalName[i]%>
                    </h2>
                    <p>
                        <%=animalDesc[i]%>
                    </p>
                </div>
                <div class="col-md-6">
                    <img src=<%=animalPic[i]%> class="animalImage">
                </div>
            </div>
            <br>
            <% } %>
                <% } %>

</div>